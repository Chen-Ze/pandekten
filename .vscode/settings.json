{
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-shell-escape", // required for bib
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-xelatex",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "TEXMFHOME": "%DIR%/.texmf"
            }
        },
        {
            "name": "feyn",
            "command": "lualatex",
            "args": [
                "-shell-escape", // required for bib
                "%DOC%"
            ],
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pandekten",
            "tools": [
              "latexmk"
            ],
        },
        {
            "name": "feyn",
            "tools": [
              "feyn"
            ],
        },
    ],
    "files.exclude": {
        "**/*.aux": true,
        "**/.texmf": true,
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.out": true,
        "**/*.synctex.gz": true,
        "**/*.xdv": true,
        "**/*.bbl": true,
        "**/*.blg": true,
        "**/*.log": true,
        "**/main.pdf": true,
    }
}